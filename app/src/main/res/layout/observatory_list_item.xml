<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/observatory_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?android:actionBarSize"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bavarian Public Observatory Munich" />

    <TextView
        android:id="@+id/observatory_list_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@id/observatory_list_item_name"
        app:layout_constraintTop_toBottomOf="@id/observatory_list_item_name"
        tools:text="Rosenheimer Str. 160H" />

    <TextView
        android:id="@+id/observatory_list_item_opening_Hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@id/observatory_list_item_address"
        app:layout_constraintTop_toBottomOf="@id/observatory_list_item_address"
        tools:text="Opens at 17:00" />

    <ImageButton
        android:id="@+id/observatory_list_item_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/observatory_list_item_name" />

</android.support.constraint.ConstraintLayout>